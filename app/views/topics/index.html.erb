<h1><%=_('Listing topics')%></h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td>
            <%= link_to 'Show', topic, class: 'btn btn-mini' %>
            <%= link_to 'Edit', edit_topic_path(topic), class: 'btn btn-mini' %>
            <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Topic', new_topic_path, class: 'btn btn-primary' %>
